{
  "extends": [
    "./../../tslint.json"
  ],
  "rulesDirectory": [
    "./../../node_modules/tslint-rules-bunch/rules"
  ],
  "rules": {
    "no-import-zones": [
      true,
      {
        "zones": [
          {
            "patterns": [
              {
                "target": "src/test/**/*",
                "from": [
                  "lib/**/*",
                  "src/lib",
                  "src/lib/**/*"
                ]
              }
            ]
          }
        ]
      }
    ]
  }
}
