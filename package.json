{
  "name": "fs-json-store-encryption-adapter",
  "version": "1.0.0",
  "description": "Encryption adapter for the \"fs-json-store\" module",
  "author": "Vladimir Yakovlev <dev.vladimir.y@gmail.com> (https://github.com/vladimiry)",
  "license": "MIT",
  "repository": "git@github.com:vladimiry/fs-json-store-encryption-adapter.git",
  "keywords": [
    "adapter",
    "argon2",
    "buffer",
    "crypto",
    "cypher",
    "decipher",
    "decryption",
    "encryption",
    "fs-json-store",
    "libsodium",
    "sodium"
  ],
  "main": "./index.js",
  "engines": {
    "node": ">=8.9.4 <9 || >=10.0.0"
  },
  "scripts": {
    "dist:compile": "tsc -p ./src/lib/tsconfig.json --listEmittedFiles",
    "dist:compile:watch": "tsc -p ./src/lib/tsconfig.json -w",
    "dist:clean": "rimraf ./dist",
    "dist:copy": "cpx \"{package.json,README.md,LICENSE}\" ./dist",
    "dist": "npm-run-all dist:clean lint dist:compile dist:copy test",
    "lint:src": "tslint -p ./src/lib/tsconfig.json -c ./tslint.json \"./src/{lib,@types}/**/*.ts\"",
    "lint:test": "tslint -p ./src/test/tsconfig.json -c ./src/test/tslint.json \"./src/test/**/*.ts\"",
    "lint": "npm-run-all lint:src lint:test",
    "test": "cross-env TS_NODE_PROJECT=./src/test/tsconfig.json ava --verbose \"./src/test/**/*.spec.ts\"",
    "test:generate_encrypted_presets_dumps": "cross-env TS_NODE_PROJECT=./src/test/tsconfig.json GENERATE_ENCRYPTED_PRESETS_DUMPS=true ts-node ./src/test/util.ts"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "dependencies": {
    "combine-errors": "^3.0.3",
    "sodium-native": "^2.2.1",
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "@types/mkdirp": "^0.5.2",
    "@types/node": "^10.9.1",
    "@types/randomstring": "^1.1.6",
    "ava": "^1.0.0-beta.6",
    "cpx": "^1.5.0",
    "cross-env": "^5.2.0",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.3",
    "randomstring": "^1.1.5",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-rules-bunch": "^0.0.5",
    "typescript": "^3.0.1"
  }
}
