{
  "name": "fs-json-store-encryption-adapter",
  "version": "0.0.2",
  "description": "Encryption adapter for the \"fs-json-store\" module",
  "author": "Vladimir Yakovlev <dev.vladimir.y@gmail.com> (https://github.com/vladimiry)",
  "license": "MIT",
  "repository": "git@github.com:vladimiry/fs-json-store-encryption-adapter.git",
  "keywords": [
    "adapter",
    "argon2",
    "buffer",
    "crypto",
    "cypher",
    "decipher",
    "decryption",
    "encryption",
    "fs-json-store",
    "libsodium",
    "sodium"
  ],
  "main": "./index.js",
  "scripts": {
    "dist:compile": "tsc -p ./src/lib/tsconfig.json --listEmittedFiles",
    "dist:compile:watch": "tsc -p ./src/lib/tsconfig.json -w",
    "dist:clean": "rimraf ./dist",
    "dist:copy": "cpx \"{package.json,README.md,LICENSE}\" ./dist",
    "dist": "npm-run-all dist:clean lint dist:compile dist:copy test",
    "lint:src": "tslint -c ./tslint.json \"./src/{lib,@types}/**/*.ts\"",
    "lint:test": "tslint -c ./src/test/tslint.json \"./src/test/**/*.ts\"",
    "lint": "npm-run-all lint:src lint:test",
    "test": "cross-env TS_NODE_PROJECT=./src/test/tsconfig.json ava-ts --verbose \"./src/test/**/*.spec.ts\"",
    "test:generate_encrypted_presets_dumps": "cross-env TS_NODE_PROJECT=./src/test/tsconfig.json GENERATE_ENCRYPTED_PRESETS_DUMPS=true ts-node -r tsconfig-paths/register ./src/test/util.ts"
  },
  "pre-commit": [
    "lint"
  ],
  "ava": {
    "TODO ava 1": "get rid of ava-ts, run tests using ts-node as soon as ava gets *.ts file pattern allowed",
    "TODO ava 2": "ts-node/register is added as ava-ts doesn't work well with just tsconfig-paths/register added without explicit ts-node/register attaching",
    "require": [
      "ts-node/register",
      "tsconfig-paths/register"
    ]
  },
  "devDependencies": {
    "@types/mkdirp": "^0.5.2",
    "@types/node": "^10.3.6",
    "@types/randomstring": "^1.1.6",
    "ava": "^0.25.0",
    "ava-ts": "^0.24.6",
    "cpx": "^1.5.0",
    "cross-env": "^5.2.0",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.3",
    "pre-commit": "^1.2.2",
    "randomstring": "^1.1.5",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.0",
    "tsconfig-paths": "^3.4.1",
    "tslint": "^5.10.0",
    "tslint-rules-bunch": "^0.0.4",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "combine-errors": "^3.0.3",
    "sodium-native": "^2.1.6",
    "tslib": "^1.9.3",
    "util.promisify": "^1.0.0"
  }
}
