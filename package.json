{
  "name": "fs-json-store-encryption-adapter",
  "version": "2.0.0-beta.4",
  "description": "Encryption adapter for the \"fs-json-store\" module",
  "author": "Vladimir Yakovlev <dev.vladimir.y@gmail.com> (https://github.com/vladimiry)",
  "license": "MIT",
  "repository": "git@github.com:vladimiry/fs-json-store-encryption-adapter.git",
  "keywords": [
    "adapter",
    "argon2",
    "buffer",
    "crypto",
    "cypher",
    "decipher",
    "decryption",
    "encryption",
    "fs-json-store",
    "libsodium",
    "sodium"
  ],
  "main": "./lib/index.js",
  "engines": {
    "node": ">=10 <11 || >=12"
  },
  "scripts": {
    "lib:compile": "ttsc --project ./src/lib/tsconfig.json --listEmittedFiles",
    "lib:compile:watch": "ttsc --project ./src/lib/tsconfig.json -w",
    "lib:clean": "rimraf ./lib",
    "lib": "npm-run-all lib:clean lib:compile lint test",
    "lint:ts:base": "eslint",
    "lint": "yarn lint:ts:base \"./src/**/*.ts\"",
    "test": "cross-env TS_NODE_PROJECT=./src/test/tsconfig.json ava \"./src/test/**/*.spec.ts\"",
    "test:compiled:generate_encrypted_presets_dumps": "cross-env GENERATE_ENCRYPTED_PRESETS_DUMPS=true src/test/util.ts"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "files": [
      "./src/test/**/*.{spec,test}.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "timeout": "300s",
    "verbose": true
  },
  "dependencies": {
    "@hscmap/cache-map": "^1.2.0",
    "make-error-cause": "^2.3.0",
    "sodium-native": "^3.0.0",
    "tslib": "^1.11.1"
  },
  "devDependencies": {
    "@types/mkdirp": "^1.0.0",
    "@types/node": "^13.9.1",
    "@types/randomstring": "^1.1.6",
    "@types/sodium-native": "^2.3.2",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "@vladimiry/import-sort-style": "^0.1.1",
    "ava": "^3.5.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.1",
    "husky": "^4.2.3",
    "import-sort-cli": "^6.0.0",
    "import-sort-parser-typescript": "^6.0.0",
    "lint-staged": "^10.0.8",
    "mkdirp": "^1.0.3",
    "npm-run-all": "^4.1.5",
    "randomstring": "^1.1.5",
    "rimraf": "^3.0.2",
    "ts-node": "^8.6.2",
    "ttypescript": "^1.5.10",
    "typescript": "^3.8.3",
    "typescript-transform-paths": "^1.1.14"
  }
}
